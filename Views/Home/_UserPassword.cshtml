@using UserAdmin.Models;
@model UserPassword;

<div class="col-5">
    <form asp-action="EditPassword" method="post">
        <div class="form-group">
            <span asp-validation-for="Password" class="text-danger"></span><br>
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="ConfirmPW" class="text-danger"></span><br>
            <label asp-for="ConfirmPW">Confirm Password</label>
            <input asp-for="ConfirmPW" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Update Password</button>
    </form>
</div>
